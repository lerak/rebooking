<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Rebooking" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-light">
    <% if user_signed_in? %>
      <!-- Sidebar Layout for Authenticated Users -->
      <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-navy text-white flex flex-col">
          <div class="p-6 border-b border-dark-blue">
            <h1 class="text-2xl font-bold">Rebooking</h1>
            <% if current_user.business.present? %>
              <p class="text-sm text-light-blue mt-1"><%= current_user.business.name %></p>
            <% end %>
          </div>

          <!-- Navigation -->
          <%= render 'shared/nav' %>

          <!-- User Menu -->
          <div class="mt-auto p-4 border-t border-dark-blue">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium"><%= current_user.email %></p>
                <p class="text-xs text-gray-medium"><%= current_user.role.titleize %></p>
              </div>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-sm text-light-blue hover:text-white" %>
            </div>
          </div>
        </aside>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto">
          <!-- Page Content -->
          <div class="p-8">
            <%= turbo_frame_tag "main_content" do %>
              <!-- Flash Messages inside Turbo Frame -->
              <% if notice %>
                <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4" role="alert">
                  <p><%= notice %></p>
                </div>
              <% end %>
              <% if alert %>
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                  <p><%= alert %></p>
                </div>
              <% end %>

              <%= yield %>
            <% end %>
          </div>
        </main>
      </div>
    <% else %>
      <!-- Simple Layout for Unauthenticated Users (Sign In/Sign Up) -->
      <div class="min-h-screen flex items-center justify-center bg-gray-light">
        <div class="max-w-md w-full">
          <% if notice %>
            <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-4" role="alert">
              <p><%= notice %></p>
            </div>
          <% end %>
          <% if alert %>
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
              <p><%= alert %></p>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
