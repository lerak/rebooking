<%= turbo_frame_tag "main_content" do %>
  <div class="flex h-screen">
    <!-- Left column: Conversation list -->
    <aside class="w-1/3 border-r border-gray-300 overflow-y-auto" role="complementary" aria-label="Conversation list">
      <div class="p-4 border-b border-gray-300 bg-gray-50">
        <h1 class="text-2xl font-bold text-gray-dark">Messages</h1>
      </div>

      <div id="conversations" role="list" aria-label="Message conversations">
        <% if @conversations.empty? %>
          <div class="p-4 text-center text-gray-600" role="status">
            <p>No conversations yet</p>
          </div>
        <% else %>
          <% @conversations.each do |customer, messages| %>
            <%= render partial: 'conversation', locals: { customer: customer, messages: messages } %>
          <% end %>
        <% end %>
      </div>
    </aside>

    <!-- Right column: Message thread -->
    <main class="w-2/3 flex flex-col" role="main" aria-label="Message thread">
      <div id="message-thread" class="flex-1 overflow-y-auto p-4 bg-gray-50" role="region" aria-label="Message history">
        <div class="text-center text-gray-600 mt-20" role="status">
          <p>Select a conversation to view messages</p>
        </div>
      </div>

      <!-- Message input form (will be shown when conversation is selected) -->
      <div id="message-form-container" class="border-t border-gray-300 p-4 bg-white hidden" role="form" aria-label="Send message">
        <!-- Message form will be inserted here via Turbo Stream or JavaScript -->
      </div>
    </main>
  </div>
<% end %>

<%= turbo_stream_from "business_#{current_user.business.id}_messages" %>
