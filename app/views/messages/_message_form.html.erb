<div class="bg-white rounded-xl shadow-xl border border-gray-100 p-5">
  <%= form_with(url: messages_path, method: :post, scope: :message, data: { controller: "message-form", action: "turbo:submit-end->message-form#reset" }, class: "w-full") do |form| %>
    <%= hidden_field_tag :customer_id, customer.id %>

    <div class="flex items-end gap-3">
      <div class="flex-1">
        <%= form.text_area :body,
            rows: 3,
            placeholder: "Type your message here...",
            class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none text-base bg-gray-50 focus:bg-white transition-colors shadow-inner",
            data: { message_form_target: "input", action: "keydown->message-form#handleKeydown" },
            required: true %>
      </div>

      <div>
        <%= form.submit "Send",
            class: "px-8 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-xl hover:from-blue-700 hover:to-blue-800 active:scale-95 transition-all font-semibold cursor-pointer shadow-lg hover:shadow-xl text-base h-[72px] flex items-center justify-center min-w-[100px]",
            data: { message_form_target: "submit" } %>
      </div>
    </div>

    <div class="mt-3 flex items-center justify-between">
      <div class="text-xs text-gray-500 flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span>Press <kbd class="px-1.5 py-0.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">Enter</kbd> to send</span>
      </div>
      <div class="text-xs text-gray-400">
        <kbd class="px-1.5 py-0.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded">Shift + Enter</kbd> for new line
      </div>
    </div>
  <% end %>
</div>
