<%= form_with(model: customer, data: { turbo_frame: "main_content" }, class: "space-y-6") do |form| %>
  <!-- Error Messages -->
  <% if customer.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
            <% customer.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <h2 class="text-xl font-semibold text-gray-dark mb-6">Customer Information</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- First Name -->
      <div>
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-dark mb-2" %>
        <%= form.text_field :first_name,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
            placeholder: "John" %>
      </div>

      <!-- Last Name -->
      <div>
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-dark mb-2" %>
        <%= form.text_field :last_name,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
            placeholder: "Doe" %>
      </div>

      <!-- Email -->
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-dark mb-2" %>
        <%= form.email_field :email,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
            placeholder: "john.doe@example.com" %>
      </div>

      <!-- Phone -->
      <div>
        <%= form.label :phone, class: "block text-sm font-medium text-gray-dark mb-2" %>
        <%= form.telephone_field :phone,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
            placeholder: "(555) 123-4567" %>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-3">
    <%= link_to "Cancel",
        customer.persisted? ? customer : customers_path,
        data: { turbo_frame: "main_content" },
        class: "px-4 py-2 border border-gray-300 text-gray-dark rounded-lg hover:bg-gray-light transition-colors" %>
    <%= form.submit customer.persisted? ? "Update Customer" : "Create Customer",
        class: "px-6 py-2 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors font-medium" %>
  </div>
<% end %>
