<%= turbo_frame_tag "main_content" do %>
<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-dark">Customers</h1>
    <%= link_to new_customer_path,
        data: { turbo_frame: "main_content" },
        class: "inline-flex items-center px-4 py-2 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Customer
    <% end %>
  </div>

  <!-- Customers Table -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <% if @customers.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-light">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-medium uppercase tracking-wider">
              Name
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-medium uppercase tracking-wider">
              Email
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-medium uppercase tracking-wider">
              Phone
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-medium uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @customers.each do |customer| %>
            <tr class="hover:bg-gray-light transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10 bg-light-blue bg-opacity-10 rounded-full flex items-center justify-center">
                    <span class="text-light-blue font-semibold text-sm">
                      <%= customer.first_name[0].upcase %><%= customer.last_name[0].upcase %>
                    </span>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-dark">
                      <%= customer.first_name %> <%= customer.last_name %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-dark"><%= customer.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-dark"><%= customer.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-3">
                  <%= link_to customer,
                      data: { turbo_frame: "main_content" },
                      class: "text-light-blue hover:text-dark-blue" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  <%= link_to edit_customer_path(customer),
                      data: { turbo_frame: "main_content" },
                      class: "text-gray-medium hover:text-gray-dark" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to customer,
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this customer?" },
                      class: "text-red-500 hover:text-red-700" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-medium" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-dark">No customers</h3>
        <p class="mt-1 text-sm text-gray-medium">Get started by creating a new customer.</p>
        <div class="mt-6">
          <%= link_to new_customer_path,
              data: { turbo_frame: "main_content" },
              class: "inline-flex items-center px-4 py-2 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Customer
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
