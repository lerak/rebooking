<%= turbo_frame_tag "main_content" do %>
<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-dark">Appointments</h1>
    <%= link_to new_appointment_path,
        data: { turbo_frame: "main_content" },
        class: "inline-flex items-center px-4 py-2 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      New Appointment
    <% end %>
  </div>

  <!-- Appointments Calendar-like List -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <% if @appointments.any? %>
      <div class="divide-y divide-gray-200">
        <% @appointments.group_by { |a| a.start_time.to_date }.each do |date, appointments| %>
          <!-- Date Header -->
          <div class="bg-gray-light px-6 py-3 sticky top-0">
            <h2 class="text-sm font-semibold text-gray-dark">
              <%= date.strftime("%A, %B %d, %Y") %>
            </h2>
          </div>

          <!-- Appointments for this date -->
          <div class="divide-y divide-gray-100">
            <% appointments.each do |appointment| %>
              <div class="px-6 py-4 hover:bg-gray-light transition-colors">
                <div class="flex items-center justify-between">
                  <!-- Time and Customer Info -->
                  <div class="flex items-center space-x-4 flex-1">
                    <!-- Time Badge -->
                    <div class="flex-shrink-0">
                      <div class="bg-navy bg-opacity-10 rounded-lg px-3 py-2 text-center">
                        <div class="text-xs font-medium text-gray-medium uppercase">
                          <%= appointment.start_time.strftime("%I:%M %p") %>
                        </div>
                        <div class="text-xs text-gray-medium">
                          <%= ((appointment.end_time - appointment.start_time) / 60).to_i %> min
                        </div>
                      </div>
                    </div>

                    <!-- Customer Info -->
                    <div class="flex items-center flex-1">
                      <div class="flex-shrink-0 h-10 w-10 bg-light-blue bg-opacity-10 rounded-full flex items-center justify-center">
                        <span class="text-light-blue font-semibold text-sm">
                          <%= appointment.customer.first_name[0].upcase %><%= appointment.customer.last_name[0].upcase %>
                        </span>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-dark">
                          <%= appointment.customer.first_name %> <%= appointment.customer.last_name %>
                        </div>
                        <div class="text-xs text-gray-medium">
                          <%= appointment.customer.phone %>
                        </div>
                      </div>
                    </div>

                    <!-- Status Badge -->
                    <div class="flex-shrink-0">
                      <% case appointment.status %>
                      <% when "scheduled" %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          Scheduled
                        </span>
                      <% when "confirmed" %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Confirmed
                        </span>
                      <% when "completed" %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Completed
                        </span>
                      <% when "cancelled" %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          Cancelled
                        </span>
                      <% end %>
                    </div>
                  </div>

                  <!-- Actions -->
                  <div class="flex items-center space-x-3 ml-4">
                    <%= link_to appointment,
                        data: { turbo_frame: "main_content" },
                        class: "text-light-blue hover:text-dark-blue" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                    <%= link_to edit_appointment_path(appointment),
                        data: { turbo_frame: "main_content" },
                        class: "text-gray-medium hover:text-gray-dark" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                    <% end %>
                    <%= button_to appointment,
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this appointment?" },
                        class: "text-red-500 hover:text-red-700" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-medium" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-dark">No appointments</h3>
        <p class="mt-1 text-sm text-gray-medium">Get started by scheduling a new appointment.</p>
        <div class="mt-6">
          <%= link_to new_appointment_path,
              data: { turbo_frame: "main_content" },
              class: "inline-flex items-center px-4 py-2 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Appointment
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
