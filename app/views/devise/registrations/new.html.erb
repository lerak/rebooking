<div class="bg-white rounded-lg shadow-lg p-8">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-navy">Rebooking</h1>
    <p class="text-gray-medium mt-2">Create your account</p>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-dark mb-2" %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
          placeholder: "Enter your email" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-dark mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-xs text-gray-medium">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
          placeholder: "Create a password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-dark mb-2" %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-light-blue focus:border-light-blue transition-colors",
          placeholder: "Confirm your password" %>
    </div>

    <div>
      <%= f.submit "Sign up",
          class: "w-full px-6 py-3 bg-navy text-white rounded-lg hover:bg-dark-blue transition-colors font-medium" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
